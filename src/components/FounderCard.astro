---
import { Image } from "astro:assets";

interface Props {
  name: string;
  description: string;
  imageSrc: ImageMetadata; // Se elimina "| string"
  linkedinUrl: string;
  role?: string;
}

const {
  name,
  description,
  imageSrc,
  linkedinUrl,
  role = "CoFounder",
} = Astro.props;
---

<article class="flex flex-col max-w-sm">
  <div class="relative">
    <Image
      src={imageSrc}
      alt={name}
      class="w-full h-auto object-cover aspect-[3/4]"
    />
    <span
      class="absolute -top-2 -right-4 bg-[#8B5A5A] text-[#EDE8E3] font-arialnova font-bold px-6 py-2 text-lg -rotate-12 origin-center"
    >
      {role}
    </span>
  </div>

  <div class="mt-6">
    <h3 class="font-arialnova text-[#774F4F] text-2xl font-black mb-4">
      {name}
    </h3>
    <p class="font-arialnova text-[#774F4F] text-base leading-relaxed mb-4">
      {description}
    </p>
    <a
      href={linkedinUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="inline-flex items-center gap-1 font-arialnova text-[#774F4F] font-bold hover:underline"
    >
      LINKEDIN
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="w-4 h-4"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <line x1="7" y1="17" x2="17" y2="7"></line>
        <polyline points="7 7 17 7 17 17"></polyline>
      </svg>
    </a>
  </div>
</article>

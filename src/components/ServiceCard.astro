---
interface ServiceProps {
	serviceNumber: string;
	serviceName: string;
	serviceDescription: string;
	serviceTags: string[];
}

const serviceData = Astro.props as ServiceProps;
---

<div
	class="w-full group flex flex-row items-start p-10 bg-[#EDE8E3] hover:bg-[#774F4F] transition-colors shadow-sm h-full font-arialnova"
>
	<div class="flex flex-row justify-between">
		<p
			class="text-2xl md:text-5xl font-bold text-[#774F4F] group-hover:text-[#EDE8E3]"
		>
			{serviceData.serviceNumber}
		</p>
		<div class="flex flex-col pl-6">
			<p
				class="text-xl md:text-2xl text-[#774F4F] group-hover:text-[#EDE8E3] uppercase font-bold"
			>
				{serviceData.serviceName}
			</p>
			<div class="flex flex-row gap-2 mt-2 flex-wrap">
				{
					serviceData.serviceTags.map((tag) => (
						<div class="px-3 py-1 rounded-full bg-[#774F4F] text-[#EDE8E3] text-sm font-medium shadow-sm group-hover:bg-[#EDE8E3] group-hover:text-[#774F4F] transition-colors">
							{tag}
						</div>
					))
				}
			</div>
			<p
				class="overflow-hidden max-h-0 opacity-0 group-hover:max-h-40 group-hover:opacity-100 transition-all duration-1000 ease-in-out text-sm md:text-xl mt-3 text-[#EDE8E3] group-hover:text-[#EDE8E3]"
			>
				{serviceData.serviceDescription}
			</p>
		</div>
	</div>
</div>
